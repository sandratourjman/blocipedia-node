<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>

    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <% include ../static/partials/messages.ejs %>

      <div class="row justify-content-md-center">
           
      </div>

      <div class="row justify-content-md-center align-middle" >
           <div class="col-md-11">
             <h4 style="display: inline-block; margin-right:10px">All Wikis</h4>
             
              <a href="/wikis/new" class="btn btn-success btn-sm">New Wiki</a>
              <!-- <h4>Your Wiki Collaborations</h4>
              <a href="/users/collaborations" class="btn btn-primary" style='margin-bottom: 12px'>See Collaborations</a> -->
    
           </div>
      </div>

         <div class="row justify-content-md-center">
           <div class="col-md-11">

            <table id="wikisTable">
              <thead>
                <tr>
                  <col>
                  <col style="width:10%">
                  <col style="width:10%">
                </tr>
              <thead>
              <tbody>
                <% const allWikis = wikis.filter(wiki => wiki.userId === currentUser.id || wiki.private == false) %>
                <% allWikis.forEach((wiki) => {  %>
                <tr>
                  <td><a href="/wikis/<%= wiki.id %>"><%= wiki.title %></a></td>
                  <td><a href="/wikis/<%= wiki.id %>/edit" class="btn btn-warning btn-sm">Edit Wiki</a></td>
                  <td>
                    <form style="display:initial" action="/wikis/<%= wiki.id %>/destroy" method="post">
                      <button type="submit" class="btn btn-danger btn-sm">Delete Wiki</button>
                    </form>
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>
           </div>
         </div>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>